<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmistadesActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="AMISTADES"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lvSolicitudesAmistad"
        app:layout_constraintEnd_toEndOf="@+id/lvSolicitudesAmistad"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/lvSolicitudesAmistad" />

    <ListView
        android:id="@+id/lvSolicitudesAmistad"
        android:layout_width="320dp"
        android:layout_height="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/tvSolicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="28dp"
        android:text="Solicitudes de amistad"
        app:layout_constraintBottom_toTopOf="@+id/lvSolicitudesAmistad"
        app:layout_constraintStart_toStartOf="@+id/lvSolicitudesAmistad" />

    <TextView
        android:id="@+id/tvAmigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Amig@s"
        app:layout_constraintStart_toStartOf="@+id/tvSolicitudes"
        app:layout_constraintTop_toBottomOf="@+id/lvSolicitudesAmistad" />

    <ListView
        android:id="@+id/lvAmigos"
        android:layout_width="325dp"
        android:layout_height="211dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/lvSolicitudesAmistad"
        app:layout_constraintTop_toBottomOf="@+id/lvSolicitudesAmistad" />
</androidx.constraintlayout.widget.ConstraintLayout>