<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaPerfilActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="PERFIL"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tvNombreUsuarioVistaPerfil"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDescripcionVistaPerfil"
        app:layout_constraintStart_toStartOf="@+id/tvDescripcionVistaPerfil"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNombreUsuarioVistaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@tu_xula_lol"
        app:layout_constraintEnd_toEndOf="@+id/tvNombreVistaPerfil"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tvEdadVistaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="16"
        app:layout_constraintBottom_toBottomOf="@+id/tvNombreUsuarioVistaPerfil"
        app:layout_constraintStart_toEndOf="@+id/tvNombreUsuarioVistaPerfil"
        app:layout_constraintTop_toTopOf="@+id/tvNombreUsuarioVistaPerfil" />

    <TextView
        android:id="@+id/tvNombreVistaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Jennifer"
        app:layout_constraintBottom_toTopOf="@+id/tvCancionesComunVistaPerfil"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreUsuarioVistaPerfil"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/tvCancionesComunVistaPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0 canciones en comÃºn"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/tvNombreVistaPerfil"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="@+id/tvNombreVistaPerfil" />

    <TextView
        android:id="@+id/tvDescripcionVistaPerfil"
        android:layout_width="342dp"
        android:layout_height="327dp"
        android:text="Tu mami chula de confianza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />
</androidx.constraintlayout.widget.ConstraintLayout>